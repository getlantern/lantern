# cloud.yaml contains the default configuration that's made available on the
# internet.
client:
  frontedservers:
  - host: {{.datacenterLocale}}.fallbacks.getiantem.org
    port: 443
    poolsize: 30
    masqueradeset: "cloudflare"
    maxmasquerades: 20
    qos: 10
    weight: 4000
    trusted: true
  chainedservers: {{range .localeFallbacks}}
    fallback-{{.ip}}:
      addr: {{.ip}}:443
      cert: "{{.cert}}"
      authtoken: "{{.auth_token}}"
      pipelined: true
      weight: 1000000
      qos: 10
      trusted: true{{end}}
  masqueradesets:
    cloudflare:{{range .masquerades}}
    - domain: {{.Domain}}
      ipaddress: {{.IpAddress}}{{end}}
proxiedsites:
  cloud:{{range $domain := .proxiedsites }}
  - {{$domain}}{{end}}
trustedcas: {{range .cas}}
- commonname: "{{.CommonName}}"
  cert: "{{.Cert}}"{{end}}
